            if (errors[v] == true) {
                $('#' + v).parents('.control_point').addClass('error');
                $('#' + v).parents('.control_point').removeClass('success');
                e.preventDefault();
            }
            else {
                $('#' + v).parents('.control_point').removeClass('error');
                $('#' + v).parents('.control_point').addClass('success');
            }
        }
